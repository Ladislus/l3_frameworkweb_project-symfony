<form method="post" action="{{ path('semestre_delete', {'id': semestre.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce semestre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ semestre.id) }}">
    <button>Supprimer</button>
</form>